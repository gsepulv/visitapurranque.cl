# ═══════════════════════════════════════════════════
# visitapurranque.cl — Variables de entorno
# Copiar como .env y completar los valores
# ═══════════════════════════════════════════════════

# Base de datos
DB_HOST=localhost
DB_PORT=3306
DB_NAME=visitapurranque
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Sitio
APP_URL=http://visitapurranque.cl.test
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=America/Santiago

# Email
MAIL_FROM=contacto@purranque.info
MAIL_FROM_NAME=Visita Purranque

# Cloudflare Turnstile (CAPTCHA)
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# Google Maps
GOOGLE_MAPS_API_KEY=

# Google Drive Backup
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=
GOOGLE_DRIVE_FOLDER_ID=

# Google Analytics
GA_MEASUREMENT_ID=

# Dashboard de proyecto
PROYECTO_PASS=cambiar_este_password
